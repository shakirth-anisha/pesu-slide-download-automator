# PESU Academy Credentials
# Your PESU Academy SRN/PRN
USERNAME=

# Your PESU Academy password
PASSWORD=

# Settings

# Whether to remember your choice for credential prompts
# 0 = Ask every time (default)
# 1 = Don't ask again (only ask once)
DONT_ASK_AGAIN=0

# PDF merge preference
# Leave empty = Ask every time
# 1 = Always merge PDFs automatically
# 0 = Don't remember preference
# -1 = Never merge PDFs
MERGE_PDFS='0'

# Optional: Custom download directory
# If not set, files are downloaded to the current working directory
# DOWNLOAD_DIR=/path/to/downloads

# Optional: Enable debug mode for troubleshooting
# 0 = Debug disabled (default)
# 1 = Debug enabled
DEBUG=0

# PDF save preference
# Leave empty = Ask every time
# 1 = Always remove non merged PDFs automatically
# 0 = Don't remember preference
# -1 = Never remove PDFs
KEEP_ONLY_MERGED='0'